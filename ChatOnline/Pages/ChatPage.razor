@page "/chat"
<h3>ChatPage</h3>

<div class="container mt-5">
    <!-- Поисковая строка -->
@*    <div class="row mt-3">
        <div class="col-md-12">
            <input @bind="searchQuery" class="form-control" placeholder="Search users...">
        </div>
    </div>*@

    <div class="row">
        <!-- Окно чата пользователя 1 -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body" style="height: 300px; overflow-y: scroll;">
                    @if (selectedUser != null)
                    {
                        <h5 class="card-title">Chat with @selectedUser.Username</h5>
                        @foreach (var message in selectedUser.Messages)
                        {
                            <div class="mb-3 text-right">
                                <strong>@message.Sender:</strong> @message.Content
                            </div>
                        }
                        <!-- Форма для ввода сообщения -->
                        <div class="form-group mt-3">
                            <textarea @bind="newMessage" class="form-control" rows="3" placeholder="Type your message..."></textarea>
                        </div>
                        <button @onclick="SendMessage" class="btn btn-primary">Send</button>
                    }
                    else
                    {
                        <p>Please select a user to start chatting.</p>
                    }
                </div>
            </div>
        </div>
        <!-- Окно чата пользователя 2 -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body" style="height: 300px; overflow-y: scroll;">
                    @if (selectedUser2 != null)
                    {
                        <h5 class="card-title">Chat with @selectedUser2.Username</h5>
                        @foreach (var message in selectedUser2.Messages)
                        {
                            <div class="mb-3 text-left">
                                <strong>@message.Sender:</strong> @message.Content
                            </div>
                        }
                        <!-- Форма для ввода сообщения -->
                        <div class="form-group mt-3">
                            <textarea @bind="newMessage2" class="form-control" rows="3" placeholder="Type your message..."></textarea>
                        </div>
                        <button @onclick="SendMessage2" class="btn btn-primary">Send</button>
                    }
                    else
                    {
                        <p>Please select a user to start chatting.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Список пользователей -->
    <div class="row mt-5">
        <div class="col-md-6">
            <h5>Select User</h5>
            <input @bind="searchQuery" class="form-control mb-3" placeholder="Search users...">
            <ul class="list-group">
                @foreach (var user in filteredUsers)
                {
                    <li @onclick="() => SelectUser(user)" class="list-group-item">@user.Username</li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h5>Select Second User</h5>
            <input @bind="searchQuery2" class="form-control mb-3" placeholder="Search users...">
            <ul class="list-group">
                @foreach (var user in filteredUsers2)
                {
                    <li @onclick="() => SelectUser2(user)" class="list-group-item">@user.Username</li>
                }
            </ul>
        </div>
    </div>
</div>

@code {
    private List<User> users = new List<User>
    {
        new User("Marsel"),
        new User("Macsim"),
        new User("Talgat Ramilevish"),
        new User("Danil Dmitrievish"),
        new User("Kirill"),
        new User("Alina"),
        new User("Samat")
    };

    private User selectedUser;
    private User selectedUser2;
    private string searchQuery = "";
    private string searchQuery2 = "";
    private string newMessage = "";
    private string newMessage2 = "";

    // Фильтрация пользователей для первого списка
    private List<User> filteredUsers => string.IsNullOrEmpty(searchQuery) ? users : users.Where(u => u.Username.StartsWith(searchQuery, StringComparison.OrdinalIgnoreCase)).ToList();

    // Фильтрация пользователей для второго списка
    private List<User> filteredUsers2 => string.IsNullOrEmpty(searchQuery2) ? users : users.Where(u => u.Username.StartsWith(searchQuery2, StringComparison.OrdinalIgnoreCase)).ToList();

    // Выбор пользователя 1
    private void SelectUser(User user)
    {
        selectedUser = user;
    }

    // Выбор пользователя 2
    private void SelectUser2(User user)
    {
        selectedUser2 = user;
    }

    // Отправка сообщения пользователю 1
    private void SendMessage()
    {
        if (!string.IsNullOrEmpty(newMessage))
        {
            selectedUser.Messages.Add(new Message { Sender = "You", Content = newMessage });
            newMessage = "";
        }
    }

    // Отправка сообщения пользователю 2
    private void SendMessage2()
    {
        if (!string.IsNullOrEmpty(newMessage2))
        {
            selectedUser2.Messages.Add(new Message { Sender = "You", Content = newMessage2 });
            newMessage2 = "";
        }
    }

    // Класс пользователя с сообщениями
    public class User
    {
        public string Username { get; }
        public List<Message> Messages { get; set; } = new List<Message>();

        public User(string username)
        {
            Username = username;
        }
    }

    // Класс сообщения
    public class Message
    {
        public string Sender { get; set; }
        public string Content { get; set; }
    }
}
